{
	"name": "obsidian-block-referencer",
	"version": "1.0.0",
	"description": "This is an obsidian plugin which allows you to query obsidian blocks and reference them.",
	"main": "main.js",
	"scripts": {
		"dev": "node esbuild.config.mjs",
		"build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
		"postbuild": "npx cpy manifest.json ./vault/.obsidian/plugins/obsidian-block-referencer && npx cpy ./dist/main.js ./vault/.obsidian/plugins/obsidian-block-referencer",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"version": "node version-bump.mjs && git add manifest.json versions.json",
		"test": "jest"
	},
	"keywords": [],
	"author": "Xherdi Lika",
	"license": "MIT",
	"devDependencies": {
		"@types/node": "22.13.4",
		"@typescript-eslint/eslint-plugin": "8.24.0",
		"@typescript-eslint/parser": "8.24.0",
		"builtin-modules": "4.0.0",
		"esbuild": "0.25.0",
		"esbuild-plugin-copy": "^2.1.1",
		"esbuild-svelte": "^0.9.0",
		"obsidian": "latest",
		"svelte-preprocess": "^6.0.3",
		"tslib": "2.8.1",
		"typescript": "5.7.3",
		"@tsconfig/svelte": "^5.0.4",
		"cpy-cli": "^5.0.0",
		"jest": "^29.7.0",
		"svelte": "^5.20.1"

	},
	"dependencies": {
		
	}
}
